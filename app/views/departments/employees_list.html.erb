<h1><%= link_to "#{@department.name}", @department %> department employees vacations list</h1>

<% @department.employees.each do |employee| %>
    <h3><%= link_to "#{employee.first_name} #{employee.last_name}", employee %>:</h3>
    <ul>
        <% employee.vacations.each do |vacation| %>
            <li><%= vacation.started_on %> - <%= vacation.finished_on %></li>
        <% end %>
        <h4>Total vacation days: <%= employee.vacations.sum { |vacation| (vacation.finished_on - vacation.started_on).to_i } %></h4>
    </ul>
<% end %>
