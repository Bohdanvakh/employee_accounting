<h1><%= t('views.department.show.title') %></h1>

<p><%= t('views.department.show.department_id') %>: <%= @department.id %></p>
<p><%= t('views.department.show.department_name') %>: <%= @department.name %></p>
<p><%= t('views.department.show.department_abbreviation') %>: <%= @department.abbreviation %></p>

<%= link_to t('views.department.show.edit'), edit_department_path %>
<hr />
<br>
<%= link_to t('views.department.show.add_employees'), new_employee_path %>
<br>
<%= link_to t('views.department.show.employee_vacations'), "/departments/#{@department.id}/employees" %>

<h2><%= t('views.department.show.department_employees') %></h2>
<% @employees.each do |employee| %>
    <div class="user_info">
        <li><%= link_to "#{employee.first_name} #{employee.last_name}", employee_path(employee) %></li>
        <p><%= employee.position_histories.last&.position&.name %></p>
    </div>
<% end %>
