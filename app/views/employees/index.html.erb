<h1>Employee Index</h1>
<h2>Here are the numbers of all Employees</h2>

<%= link_to "Add Employee", new_employee_path %>

<h3>Numebr on Employees: <%= @employees.count %></h3>

<% @employees.each do |employee| %>
    <%= link_to employee.first_name, employee %>
    <%= link_to "Edit", edit_employee_path(employee) %>
    <%= button_to "Delete", employee_path(employee), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
<% end %>
