<h1>Employee New</h1>

<%= form_with(model: @employee, url: employees_path) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :middle_name %>
    <%= f.text_field :middle_name %>

    <%= f.label :passport_data %>
    <%= f.text_field :passport_data %>

    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth %>

    <%= f.label :place_of_birth %>
    <%= f.text_field :place_of_birth %>

    <%= f.label :home_address %>
    <%= f.text_field :home_address %>

    <%= f.label :department_id %>
    <%= f.text_field :department_id %>

    <%= f.submit "Create Employee" %>
<% end %>

<% if @employee.errors.any? %>
  <% @employee.errors.full_messages.each do |message|%>
  <p><%= message %></p>
  <%end%>
<%end%>
